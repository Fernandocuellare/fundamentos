void main()
{
	int n,num,p,sum;
	cout<<"introduzca un numero entero:";
	cin>>num;
	cout<<"introduzca la suma:";
	cin>>sum;
	cout<<"introduzca pares:";
	cin>>p;
	p = 0;

	while ( num<=10 )
	{

		cout<<"La suma de los pares es:";

		while (n<num)
		{
			sum=sum+num;
			n++-1; 
		}

		cout<<endl<<"La suma de los primeros "<<num<<" numeros impares es igual a: "<<sum<<endl;


		getch();


	}
