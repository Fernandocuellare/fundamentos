#include "stdafx.h"
#include <iostream>
#include "conio.h" //getch

using namespace std;

void main()
{
	float base;
	float altura;
	float area;
	cout<<"ingresar la base del triangulo";
	cin>>base;
	cout<<"ingresar la altura del triangulo";
	cin>>altura;
	area=(base*altura)/2;
	cout<<"area del triangulo es"<<area;
	cin.ignore();
	cin.get();
	getch();
}

